{
  "compilerOptions": {
    "sourceMap" : true,
    "module": "esnext",
    "target": "es2018",                              
    "moduleResolution": "node",
    "outDir": "./dist",
    "jsx": "react",            
    "skipLibCheck": true,
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "esModuleInterop": true,             
    "lib": ["dom", "esnext"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["src"],
  "exclude": ["node_modules", "examples", "src/*.test.ts"]
}
